{
  "name": "@ghentcdh/vue-component-annotated-text",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GhentCDH/vue_component_annotated_text"
  },
  "version": "0.0.17",
  "exports": {
    ".": {
      "import": "./dist/vue-component-annotated-text.js",
      "require": "./dist/vue-component-annotated-text.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "import": "./dist/style.css"
    }
  },
  "type": "module",
  "style": "./dist/style.css",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "docs:build": "typedoc --plugin typedoc-plugin-markdown --plugin typedoc-plugin-vue --entryPoints \"./src/lib/annotatedTextUtils/StateClasses.ts\" --entryPoints \"./src/types/Annotation.d.ts\" --entryPoints \"./src/types/AnnotatedText.d.ts\" typedoc.json --out docs/typedoc && vue-docgen src/components/AnnotatedText.vue ./docs ",
    "test:vue2": "vue-demi-switch 2 && vitest --environment jsdom --root src/",
    "test:vue3": "vue-demi-switch 3 && vitest --environment jsdom --root src/",
    "test:coverage": "vue-demi-switch 3 && vitest --environment jsdom --root src/ --coverage",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "uuid": "^10.0.0",
    "vue-demi": "latest"
  },
  "devDependencies": {
    "@babel/types": "^7.21.2",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.16.15",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@vitest/coverage-c8": "^0.31.1",
    "@vue/composition-api": "^1.7.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.3.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.35.0",
    "eslint-plugin-vue": "^9.9.0",
    "etali": "^1.2.5",
    "jsdom": "^22.0.0",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.1.7",
    "prettier": "^2.8.4",
    "prism-themes": "^1.9.0",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "typedoc": "^0.26.5",
    "typedoc-plugin-markdown": "^4.2.3",
    "typedoc-plugin-vue": "^1.2.0",
    "typescript": "~5.0.4",
    "v-drag": "^3.0.9",
    "vite": "^4.5.2",
    "vite-plugin-dts": "^2.0.2",
    "vitepress": "^1.3.1",
    "vitest": "^0.31.1",
    "vue": "^3.2.47",
    "vue-docgen-cli": "^4.79.0",
    "vue-live": "^2.3.2",
    "vue-tsc": "^1.2.0",
    "vue2": "npm:vue@2.7.14"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  }
}
