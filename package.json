{
  "name": "@ghentcdh/vue-component-annotated-text",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GhentCDH/vue_component_annotated_text"
  },
  "version": "0.4.5",
  "exports": {
    ".": {
      "import": "./dist/vue-component-annotated-text.js",
      "require": "./dist/vue-component-annotated-text.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "import": "./dist/style.css"
    }
  },
  "type": "module",
  "style": "./dist/style.css",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "docs:build:typedoc": "typedoc",
    "docs:build:vitepress": "vitepress build docs",
    "docs:build:menu": "ts-node --project tools/tsconfig.tools.json tools/vitepress.mjs",
    "docs:build": "pnpm run  docs:build:typedoc && pnpm run  docs:build:menu && pnpm run   docs:build:vitepress",
    "docs:preview": "vitepress preview docs",
    "test:vue3": "vitest --environment jsdom --root src/",
    "test:coverage": "vitest --environment jsdom --root src/ --coverage",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "lint:staged": "lint-staged --allow-empty",
    "docs:dev": "vitepress dev docs",
    "upgrade": "vue upgrade",
    "release": "ts-node --project tools/tsconfig.tools.json tools/release.mjs"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "memoizee": "^0.4.17"
  },
  "devDependencies": {
    "@babel/types": "^7.25.8",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@rushstack/eslint-patch": "^1.10.4",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.8",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/coverage-c8": "^0.33.0",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.1.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.29.1",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prism-themes": "^1.9.0",
    "sass": "^1.80.3",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.10",
    "typedoc-plugin-markdown": "^4.2.9",
    "typedoc-plugin-vue": "^1.2.0",
    "typedoc-vitepress-theme": "^1.0.2",
    "typescript": "^5.6.3",
    "uuid": "^10.0.0",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.2.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitepress": "^1.4.1",
    "vitest": "^2.1.3",
    "vue": "^3.5.12",
    "vue-docgen-cli": "^4.79.0",
    "vue-live": "^2.5.4",
    "vue-tsc": "^2.1.6"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint:staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,vue,mts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.2"
}
