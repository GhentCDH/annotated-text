{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/core",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    // This requires tslib
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "e2e",
    "e2e/**/*",
    "playwright.config.ts",
    "vite.e2e.config.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ct.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
