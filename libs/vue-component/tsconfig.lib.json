{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "playwright",
    "playwright/**/*",
    "playwright-ct.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.ct.spec.ts",
    "src/**/*.test.ts"
  ]
}
