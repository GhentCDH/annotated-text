{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "outDir": "dist",
//    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@ghentcdh/vue-component-annotated-text": ["./src/index.ts"],
      "@/types/props": [
        "./src/types/props/index.ts"
      ], 
      "@/types/emits": [
        "./src/types/emits/index.ts"
      ]
    },
    "moduleResolution": "node",
    "target": "ESNext",
    "skipLibCheck": true, // Because of some type errors with etali
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "dev-app/*.vue",
    "dev-app/*.ts"
  ]
}