{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "outDir": "dist",
    //    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@ghentcdh/vue-component-annotated-text": [
        "./src/index.ts"
      ],
      "@/types/props": [
        "./src/types/props/index.ts"
      ],
      "@/types/emits": [
        "./src/types/emits/index.ts"
      ],
      "@demo": [
        "./docs/demo/index.ts"
      ]
    },
    "moduleResolution": "node",
    "target": "ESNext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "dev-app/*.vue",
    "dev-app/*.ts"
  ]
}
